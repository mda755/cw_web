= form_for @hall do |f|
  - if @hall.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hall.errors.count, "error")} prohibited this hall from being saved:"
      %ul
        - @hall.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name_full
    = f.text_field :name_full
  .field
    = f.label :name_short
    = f.text_field :name_short
  .actions
    = f.submit 'Save'
